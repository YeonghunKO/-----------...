{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "standard", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-var": "error",
    "react/react-in-jsx-scope": "off",
    "no-console": ["error", { "allow": ["warn", "log"] }],
    "prefer-regex-literals": "off",
    "curly": "error"
  }
}
